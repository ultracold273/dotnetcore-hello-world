@page
@model IndexModel
@{    
    ViewData["Title"] = "Home page";
}

@inject IHttpContextAccessor httpContextAccessor;

@code {

    private string clientCertificate { get; set; }
    private string clientCertificateFingerprint { get; set; }

    protected override async Task OnInitializedAsync()
    {
        clientCertificate = httpContextAccessor.HttpContext.Request.Headers["Client-Certificate"];
        clientCertificateFingerprint = httpContextAccessor.HttpContext.Request.Headers["Client-Certificate-Fingerprint"];
    }
}

<div class="text-center">
    <h1 class="display-4">Hello World from .Net 6</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <hr />
    <div>Host operating system: @Model.OSVersion</div>
    <div>Certificate Fingerprint: @clientCertificateFingerprint</div>
    <div>Certificate: @clientCertificate</div>
</div>
